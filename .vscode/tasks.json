{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/samples/ZigBeeNet.PlayGround/ZigBeeNet.PlayGround.csproj"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "publish_win",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/samples/ZigBeeNet.PlayGround/ZigBeeNet.PlayGround.csproj"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "publish_ubuntu",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/samples/ZigBeeNet.PlayGround/ZigBeeNet.PlayGround.csproj",
        "--self-contained",
        "true",
        "-r",
        "ubuntu.18.04-x64"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/samples/ZigBeeNet.PlayGround/ZigBeeNet.PlayGround.csproj"
      ],
      "problemMatcher": "$tsc"
    }
  ]
}
